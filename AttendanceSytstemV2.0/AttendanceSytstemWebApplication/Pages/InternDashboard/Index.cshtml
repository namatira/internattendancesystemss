@page
@model AttendanceSytstemWebApplication.Pages.InternDashboard.IndexModel
@{
    ViewData["Title"] = "Intern Dashboard";
    Layout = "~/Pages/Shared/_InternLayout.cshtml";
}

    <div class="container col-12 border shadow p-3 mt-5">
        <div class="row">
            <div class="col-8">
                <h2 class="m-1">Attendance</h2>
            </div>
            <div class="col-4">
                <a asp-page="NewAttendance" class="btn btn-success m-1 col-12 form-control">New Attendance</a>
            </div>
        </div>

        <div class="col-12 border p-3 mt-4">
            <table id="InternTable_Load" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Status</th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class=" mt-3 mb-2">
            <input type="button" class="btn-success form-control" style="width: 100px" value="Print" onclick="window.print();">
        </div>
    </div>

@section Scripts{
    <script src="~/js/internAttendance.js"></script>
}

